
<div class="new-user">
  <h1>Fora</h1>
  <h2>Sign Up</h2>

  <form action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Name<br>
      <input name="user[name]" type="text" id="name"><br>
    </label><br>
    <label>Email<br>
      <input name="user[email]" type="text" id="email"><br>
    </label><br>
    <label>Password<br>
      <input name="user[password]" type="password" id="password"><br>
    </label><br>
    <input type="submit" value="Submit" class="btn btn-primary"><br>
  </form>
</div>
