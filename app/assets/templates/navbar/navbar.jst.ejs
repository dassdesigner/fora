<div class="modal fade" id="askQuestion" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-body">

        <form class="question-form">
        <h1>Ask a question, any question!</h1>

          <label for='title'>Title</label>
          <br>

          <input type='text'
                 name='title'
                 id='title'
                 value='<%= question.escape('title') %>'>
          <br>
          <label for='body'>Body</label>
          <br>

          <textarea class='form-control'
                    rows="3"
                    cols="1"
                    name='body'
                    id='body'
                    placeholder="Write your question"><%= question.escape('body') %></textarea>
        <br>
        <button type="button" class="btn btn-default submit" data-dismiss="modal">Submit</button>
      </form>
      </div>
    </div>
  </div>
