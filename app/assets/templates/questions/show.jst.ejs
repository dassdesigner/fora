<p class="question-title"><%=question.escape('title')%></p>
<p class="question-body"><%=question.escape('body')%></p>
<p class="author-name"><%=question.escape('question_author')%></p>
<span class="question-footer"></span>
<% if (Fora.CURRENT_USER_ID == question.escape('author_id')) { %>
  <a class="text-muted delete" href="javascript:;">Delete</a>
  <a class="text-muted edit" href="javascript:;">Edit</a>
<% } %>
<div class="answer-form"></div>
<div class="answers-index"></div>
<div class="row question-show-footer">
  <% if (question.toJSON()["top_questions"]) { %>
    <% for (i = 0; i < 3; i++) { %>
    <div class="col-md-4 more-questions">
      <%=question.toJSON()["top_questions"][i]["title"]%>

    </div>
    <% } %>
  <% } %>
</div>
